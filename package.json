{
  "name": "phosen",
  "description": "Lightweight and beautiful CSS framework",
  "keywords": [
    "css",
    "framework",
    "css-framework",
    "css3",
    "responsive-design",
    "responsive",
    "mobile",
    "mobile-first",
    "front-end",
    "web"
  ],
  "version": "0.0.1",
  "author": "belomaxorka",
  "license": "MIT",
  "homepage": "https://github.com/belomaxorka/phosen",
  "main": "dist/phosen.min.css",
  "scripts": {
    "build": "npm-run-all lint-code clean-dist build-prod build-css",
    "build-css": "gulp build-css",
    "build-prod": "gulp build-prod",
    "watch": "npm-run-all clean-dist && gulp watch",
    "clean-dist": "rimraf dist/",
    "lint-code": "npx stylelint src/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belomaxorka/phosen.git"
  },
  "bugs": {
    "url": "https://github.com/belomaxorka/phosen/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.15",
    "gulp": "^4.0.2",
    "gulp-concat-css": "^3.1.0",
    "gulp-filesize": "^0.0.6",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-banner": "^4.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-font-magician": "^3.0.0",
    "rimraf": "^4.1.2",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1"
  },
  "files": [
    "dist/*.{css, map}",
    "src/*.{css}"
  ]
}
